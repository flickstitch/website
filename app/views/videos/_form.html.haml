= form_for @video do |f|
  -if @video.errors.any?
    #error_explanation
      %h2= "#{pluralize(@video.errors.count, "error")} prohibited this video from being saved:"
      %ul
        - @video.errors.full_messages.each do |msg|
          %li= msg

  -if params[:action] == 'edit'
    %img(src="#{@video.thumbnail_url.sub('2.jpg','0.jpg')}")
  %br

  = f.label :name
  %br
  = f.text_field :name
  %br

  = f.label :video_url
  %br
  = f.text_field :video_url
  %br

  -unless params[:action] == 'new' || params[:action] == 'create'
    Thumbnail url 
    %br
    = @video.thumbnail_url

  .actions
    = f.submit 'Save'

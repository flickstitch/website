= form_for @video do |f|
  -if @video.errors.any?
    #error_explanation
      %h2= "#{pluralize(@video.errors.count, "error")} prohibited this video from being saved:"
      %ul
        - @video.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :video_url
    = f.text_field :video_url
  .field
    = f.label :thumbnail_url
    = f.text_field :thumbnail_url
  .actions
    = f.submit 'Save'

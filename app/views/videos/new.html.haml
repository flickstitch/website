= render :partial => '/shared/project_scene_menu', :locals => { project:@scene.project }

%h2 
  New video
  %small 
    for project:
    = @scene.project.name
    ,
    scene:
    = @scene.name
-# show only for admin or manager
-if user_signed_in?
  -if current_user.has_role?(:admin) || current_user.has_role?(:manager)
    .admin
      = link_to "Edit Scene: #{@scene.name}", edit_scene_path(@scene)

-if user_signed_in?
  %p
    = link_to "my submitted videos", user_path(current_user)
%p
  %b Desc:
  = @scene.desc
%p
  %b Start date:
  = @scene.start_date
%p
  %b End date:
  = @scene.end_date

= render 'form'

= link_to 'Back', videos_path

%p#notice= notice

%p
  %b Name:
  = @video.name
%p
  %b Submitted by:
  - if @video.user
    = @video.user.username
  - else
    n/a
%p
  %b Video url:
  = @video.video_url
%p
  %b Description:
  = @video.desc
%p
  <iframe width="560" height="315" src="http://www.youtube.com/embed/#{@video.video_id}" frameborder="0" allowfullscreen></iframe>

#video-menu
  = render :partial => 'vote_on', :locals => { :video => @video }
  .controls(style="float:right;vertical-align:top")
    - if can?(:update, @video)
      = link_to 'Edit', edit_video_path(@video)
      \|
    = link_to 'Back', videos_path

%p
  -if current_user
    #comment_form= form_tag add_comment_video_path, :remote => true
    = text_area_tag "comment"
    = button_tag "add comment", :class => "btn", :id => "comment_submit"
  -else
    #video-show-sign-in
      = link_to "Sign in", new_user_session_path
      to comment

- if @comments
  %p
    %strong Comments
  #comments
    = render :partial => @comments, :spacer_template => "comments/comment_separator"

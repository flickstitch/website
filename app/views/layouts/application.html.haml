!!! 5
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %title= content_for?(:title) ? yield(:title) : "FlickStitch.com"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
    / Le styles
    = stylesheet_link_tag    "application"
    :css
      body {
      }
    / Le fav and touch icons
    %link{:href => "images/favicon.ico", :rel => "shortcut icon"}/
    %link{:href => "images/apple-touch-icon.png", :rel => "apple-touch-icon"}/
    %link{:href => "images/apple-touch-icon-72x72.png", :rel => "apple-touch-icon", :sizes => "72x72"}/
    %link{:href => "images/apple-touch-icon-114x114.png", :rel => "apple-touch-icon", :sizes => "114x114"}/
    = render :partial => 'shared/google_analytics'

  %body

    .container
      - flash.each do |type, message|
        %div.alert.fade.in{ :class => "alert-#{twitterized_type(type)}" }
          %a.close(data-dismiss="alert") x
          = message

      .row
        .span12
          #top-can
            #sign-in-nav
              = render :partial => "shared/signin_nav"
            #prev-project
              = link_to "PREVIOUS PROJECTS", projects_path
            #upcom-project
              = link_to "UPCOMING PROJECTS", '#'
            #project-title
              - project = @project
              - if @project.nil?
                n/a
              - else
                .title
                  = link_to project.name, project_path(project)
                -# show only for admin or manager
                = render :partial => "/shared/if_admin_or_manager", :locals => { link_text:"Edit Project: #{project.name}", link_path:edit_project_path(project) }
                &nbsp;
                &nbsp;
                &nbsp;
                = render :partial => "/shared/if_admin_or_manager", :locals => { link_text:"New Project", link_path:new_project_path }
                &nbsp;
                &nbsp;
                &nbsp;
                = render :partial => "/shared/if_admin_or_manager", :locals => { link_text:"New Scene", link_path:new_scene_path }

      .row(style="margin-top:7px")
        .span2

      .yield-content(style="clear:both;")
        = yield
      %footer
        %br
        %p.pull-right
          = link_to "About", about_path
          &nbsp;&nbsp;
          = link_to "Contact", contact_path
          &nbsp;&nbsp;
          = link_to "Terms of Use", terms_path
          &nbsp;&nbsp;
          = link_to "Privacy Policy", privacy_path
          &nbsp;&nbsp;
          &copy; FlickStitch.com 2012
    /
      Le javascript
      \==================================================
    / Placed at the end of the document so the pages load faster
    = javascript_include_tag "application"

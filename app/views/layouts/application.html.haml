!!! 5
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %title= content_for?(:title) ? yield(:title) : "Irolo St."
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
    / Le styles
    = stylesheet_link_tag    "application"
    :css
      body {
      }
    / Le fav and touch icons
    %link{:href => "images/favicon.ico", :rel => "shortcut icon"}/
    %link{:href => "images/apple-touch-icon.png", :rel => "apple-touch-icon"}/
    %link{:href => "images/apple-touch-icon-72x72.png", :rel => "apple-touch-icon", :sizes => "72x72"}/
    %link{:href => "images/apple-touch-icon-114x114.png", :rel => "apple-touch-icon", :sizes => "114x114"}/

  %body
    .navbar
      .navbar-inner
        .container
          %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
            %span.i-bar
            %span.i-bar
            %span.i-bar
          %a.brand{:href => root_path}Irolo Street
          .container.nav-collapse
            %ul.nav
              %li= link_to "About", about_path
              %li= link_to "Contact", contact_path
            %ul.nav.pull-right
              %li= link_to "Add Video", new_video_path
              %li= link_to "View Videos", videos_path
              = render :partial => "shared/signin_nav"

    .container
      - flash.each do |type, message|
        %div.alert.fade.in{ :class => "alert-#{twitterized_type(type)}" }
          %a.close(data-dismiss="alert") x
          = message
      = yield
    
      %footer
        %p
          = link_to "Terms of Use", terms_path
          &nbsp; &middot; &nbsp; 
          = link_to "Privacy Policy", privacy_path
          &copy; Irolo Street 2012
    /
      Le javascript
      \==================================================
    / Placed at the end of the document so the pages load faster
    = javascript_include_tag "application"

!!! 5
%html
  %head
    %title Collabea
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tag

  %body
    .layout-978
      .row
        .col5
          %a(href='/')
            = image_tag 'logo.png'
        .col7
          #nav-menu
            %ul
              %li 
                %a(href='#') Videos
              %li &nbsp; &middot; &nbsp;
              %li
                = link_to "About", "about"
              %li &nbsp; &middot; &nbsp;
              %li
                = link_to "Contact", "contact"
        .row-end
      .row.content
        = yield
      .row.footer
        %div(style="float:left")
          = link_to "Terms of Use", "terms"
          &nbsp; &middot; &nbsp; 
          = link_to "Privacy Policy", "privacy"
        %div(style="float:right")
          &copy; 2012 Collabea
